<Application x:Class="TestAdministration.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:TestAdministration.ViewModels"
             xmlns:views="clr-namespace:TestAdministration.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <viewModels:ViewModelLocator x:Key="ViewModelLocator" />

        <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
            <views:MainWindow />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:LoginScreenViewModel}">
            <views:LoginScreen />
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:MainScreenViewModel}">
            <views:MainScreen />
        </DataTemplate>
    </Application.Resources>
</Application>