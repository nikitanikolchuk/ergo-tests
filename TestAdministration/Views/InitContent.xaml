<UserControl
    x:Class="TestAdministration.Views.InitContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModels="clr-namespace:TestAdministration.ViewModels"
    mc:Ignorable="d"
    d:DesignWidth="1600"
    d:DesignHeight="1048"
    d:DataContext="{d:DesignInstance viewModels:InitContentViewModel}">

    <StackPanel VerticalAlignment="Center">
        <ui:TextBlock
            Margin="0,0,0,32"
            Width="600"
            FontTypography="TitleLarge"
            FontWeight="SemiBold"
            Foreground="{DynamicResource TextControlForeground}"
            TextWrapping="Wrap"
            TextAlignment="Center">
            
            Ergo Testy Jemn√© Motoriky v<Run Text="{Binding AppVersion, Mode=OneWay}" />
        </ui:TextBlock>

        <ui:Image
            CornerRadius="4"
            Height="500"
            Source="/Resources/Images/InitScreen.jpg" />
    </StackPanel>
</UserControl>