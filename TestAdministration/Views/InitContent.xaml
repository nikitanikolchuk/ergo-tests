<UserControl x:Class="TestAdministration.Views.InitContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignWidth="1600"
             d:DesignHeight="1048">
    <Border CornerRadius="7,0,0,0"
            BorderBrush="#0F000000"
            BorderThickness="1"
            Background="#7FFFFFFF"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
        <StackPanel VerticalAlignment="Center">
            <Image Margin="0,0,0,32"
                   Height="600"
                   Source="/Resources/Images/InitScreen.jpg" />
            <TextBlock Width="600"
                       Style="{StaticResource TitleLarge}"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Text="Aplikace pro administraci testů manuální zručnosti" />
        </StackPanel>
    </Border>
</UserControl>