    <StackPanel VerticalAlignment="Center">
        <TextBlock Margin="0,0,0,16"
                   Style="{StaticResource TitleLarge}"
                   Text="Přihlášení" />

        <TextBlock Margin="0,0,0,16"
                   Style="{StaticResource BodyLarge}"
                   Text="Vyberte si místo pro ukládání dat" />

        <Border Width="600"
                Padding="32"
                CornerRadius="4"
                BorderThickness="1"
                BorderBrush="{StaticResource LightBorderBrush}">
            <StackPanel>
                <TextBlock Margin="0,0,0,32"
                           Style="{StaticResource Subtitle}"
                           Text="SharePoint" />

                <Image Margin="0,0,0,32"
                       Height="64"
                       Source="{StaticResource SharePointIcon}" />

                <Button Margin="0,0,0,8"
                        Style="{StaticResource StandardButton}"
                        Content="Změnit adresář"
                        Command="{Binding OpenSharePointConfigWindow}" />

                <Button Margin="0,0,0,32"
                        Style="{StaticResource AccentButton}"
                        Content="Přihlásit se"
                        Command="{
                            Binding MainViewModel.DisplayMainScreenCommand,
                            Source={StaticResource ViewModelLocator}
                        }" />

                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0"
                            Height="1"
                            BorderThickness="1"
                            BorderBrush="#15000000" />

                    <TextBlock Grid.Column="1"
                               Margin="32,0,32,0"
                               Style="{StaticResource BodyLarge}"
                               Text="nebo" />

                    <Border Grid.Column="2"
                            Height="1"
                            BorderThickness="1"
                            BorderBrush="#15000000" />
                </Grid>

                <TextBlock Margin="0,0,0,32"
                           Style="{StaticResource Subtitle}"
                           Text="Lokální úložiště" />

                <TextBlock Margin="0,0,0,32"
                           Style="{StaticResource FontIcon}"
                           Text="" />

                <ComboBox Margin="0,0,0,8">
                    <ComboBoxItem IsSelected="True" Content="Testující" />
                    <!-- TODO -->
                </ComboBox>

                <Button Margin="0,0,0,8"
                        Style="{StaticResource StandardButton}"
                        Content="Změnit adresář" />

                <Button Margin="0,0,0,0"
                        Style="{StaticResource AccentButton}"
                        Content="Přihlásit se"
                        Command="{
                            Binding MainViewModel.DisplayMainScreenCommand,
                            Source={StaticResource ViewModelLocator}
                        }" />
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>