<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Thickness x:Key="ContentMargin" Right="8" />
    <Thickness x:Key="AudioPlayerMargin" Top="32" Right="8" Bottom="32" />

    <Style TargetType="ui:TextBlock" BasedOn="{StaticResource {x:Type ui:TextBlock}}">
        <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="AudioInstructionSpanStyle" TargetType="Span">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="Foreground" Value="#14B150" />
    </Style>

    <Style x:Key="OralInstructionSpanStyle" TargetType="Span">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="Foreground" Value="#FA1811" />
    </Style>

    <Style x:Key="PhysicalInstructionSpanStyle" TargetType="Span">
        <Setter Property="Background" Value="#FAFF19" />
        <Setter Property="Foreground" Value="#E4000000" />
    </Style>
    
    <Style x:Key="ScoringInstructionSpanStyle" TargetType="Span">
        <Setter Property="Background" Value="#16FF0D" />
        <Setter Property="Foreground" Value="#E4000000" />
    </Style>
</ResourceDictionary>