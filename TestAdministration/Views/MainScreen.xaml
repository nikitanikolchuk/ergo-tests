<UserControl x:Class="TestAdministration.Views.MainScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:TestAdministration.Views"
             xmlns:viewModels="clr-namespace:TestAdministration.ViewModels"
             DataContext="{
                 Binding MainScreenViewModel,
                 Source={StaticResource ViewModelLocator}
             }"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:MainScreenViewModel}"
             d:DesignWidth="1920"
             d:DesignHeight="1080">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <views:NavBar Grid.Column="0" />
        
        <ContentControl Grid.Column="1"
                        Content="{Binding ContentViewModel}" />
    </Grid>
</UserControl>